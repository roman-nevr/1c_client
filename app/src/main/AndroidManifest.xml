<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dmitry.a1c_client">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".android.MyApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name=".android.views.MainWindowActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".android.views.income_task.IncomeTaskActivity"
            >
        </activity>
        <activity
            android:name=".android.views.shipment.ShipmentTaskActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <activity
            android:name=".android.views.equipment.EquipmentTaskActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            >
        </activity>
        <activity android:name=".android.views.TestActivity">
        </activity>
    </application>

</manifest>